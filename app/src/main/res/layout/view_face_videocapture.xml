<RelativeLayout android:id="@+id/videocapture_container_rl"
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                android:keepScreenOn="true">

    <SurfaceView
        android:id="@+id/videocapture_preview_sv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/videocapture_timer_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:background="@drawable/face_all_darkbackground"
        android:paddingBottom="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="8dp"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:visibility="gone"
        tools:showIn="@layout/view_face_videocapture"
        tools:text="02:22"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/videocapture_preview_iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/videocapture_recordbtn_iv"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="-20dp"
        android:background="@drawable/states_face_btn_capture"
        android:clickable="true"/>

    <ImageView
        android:id="@+id/videocapture_acceptbtn_iv"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_above="@id/videocapture_recordbtn_iv"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:background="@drawable/states_face_btn_acceptdecline"
        android:clickable="true"
        android:padding="8dp"
        android:src="@drawable/btn_face_accept"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/videocapture_declinebtn_iv"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"


        android:layout_margin="10dp"
        android:background="@drawable/states_face_btn_acceptdecline"
        android:clickable="true"
        android:padding="8dp"
        android:src="@drawable/btn_face_decline"
        android:visibility="gone"/>

</RelativeLayout>